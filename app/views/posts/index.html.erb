
  <%= paginate @posts %>
  <br><br>
  <% if current_user %>
    <div class="new_post">
      <%= link_to 'New Post', new_post_path, id: "new_post_link" %>
    </div>
  <% end %>
  <h3>Posts:</h3>

  <ul class="posts_index">
    <% @posts.each do |post| %>
        <%= render partial: 'post_list_item', locals: { post: post } %>
    <% end %>
  </ul>
  <%= page_entries_info @posts %>

<%= render 'index_js' %>
