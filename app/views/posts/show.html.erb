<%= link_to "Edit", edit_post_path(@post), class: 'edit_post' %>
<%= link_to "Index", posts_path %>

<%= render partial: 'posts/show', locals: { post: @post } %>

<h3>Comment</h3>
<%= render partial: 'comments/form', locals: { comment: @comment }%>

<ul class="comment_list">

  <!-- only loops through the comments that are not replies -->
  <% @post.comments.where('body != "" AND comment_id is NULL').each do |comment| %>
    <li class="comment">
      <%= render partial: 'comments/comment', locals: { comment: comment } %>
    </li>
  <% end %>
</ul>

<%= render 'show_js' %>
